{{!-- need code that inputs user information into the card --}}
{{>navbar}}

         <!-- HEADER/JUMBOTRON -->
    <main class="w-screen flex justify-center mx-auto shadow-2xl jumbo">
        <div class="text-center mt-10 mb-10 justify-center flex">
            <br><br><br><br><br><br><br><br><br><br><br><br>
            <!-- <img src="/images/library-2.jpeg" alt="Library"> -->
          {{user-card}}
            <br><br>
        </div>
    </main>

    <!-- div container for everything -->
    <div class="bg-green-800 p-1 mx-auto flex shadow-inner text-center justify-center">
      <!-- div container for username / user card -->
      <div class="bg-red-400 flex mx-auto my-auto">
      </div>

    </div>
      <!-- div container for posts -->
      <div class="flex flex-col">
        <div class=" overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
            <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Name
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Club
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Favorite Book
                    </th>
                    <th scope="col" class="relative px-6 py-3">
                      <span class="sr-only">Posts</span>
                    </th>
                  </tr>
                </thead>
                {{>each post.user}}
              </table>
            </div>
          </div>
        </div>
      </div>

